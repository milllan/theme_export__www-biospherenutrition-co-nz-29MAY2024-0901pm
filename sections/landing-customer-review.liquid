    .wrap-landing-customer-review .quotes-slider__text {height: calc(100% - 60px);}
  }
  
  @media only screen and (max-width:1290px){
    .wrap-landing-customer-review .quotes-slider__text {height: calc(100% - 55px);}
  }
  
  @media only screen and (max-width:1199px){
    .wrap-landing-customer-review .quotes-slider .quotes-slide--item .t_img img {
      width: 100%;
    }
    .wrap-landing-customer-review .quotes-slider__text{padding-left:15px;padding-right:15px;}
  }
  
  @media only screen and (max-width:991px){
    .wrap-landing-customer-review .quotes-slider__text {height: calc(100% - 60px);}
  }
  
  @media only screen and (max-width:767px){
    .wrap-landing-customer-review .section-header.text-center h2 {
      line-height: 40px;
      font-size: 34px;
      margin: 50px 0 30px 0;
    }
    .wrap-landing-customer-review .quotes-slider__text {height: calc(100% - 65px);}
  }
  
  @media only screen and (max-width:574px){
    .wrap-landing-customer-review .quotes-slider__text {height: auto;}
  }
  
</style>
