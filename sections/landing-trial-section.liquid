<section class="hero-banner">
  <div class="mg-container">
    <div class="hero-container">
      <div class="hero-content">
        {% if section.settings.hero-title!= blank %}
        <h2>{{ section.settings.hero-title }}</h2>
        {% endif %}
        <ul>
          {% if section.settings.hero-subtitle1 != blank %}
          	<li>{{ section.settings.hero-subtitle1 }}</li>
          {% endif %}
          {% if section.settings.hero-subtitle2 != blank %}
          	<li>{{ section.settings.hero-subtitle2 }}</li>
          {% endif %}
          {% if section.settings.hero-subtitle3 !=blank %}
          <li>{{ section.settings.hero-subtitle3 }} </li>
          {% endif %}
        </ul>
        {% if section.settings.hero-try-btn != blank %}
        <div class="try-button">
          <a href="{{ section.settings.hero-try-url }}" class="hero-try-btn">{{ section.settings.hero-try-btn }}</a>
        </div>
        {% endif %}
      </div>
      {% if section.settings.hero-image != blank %}
      <div class="hero-image">
        <img src="{{ section.settings.hero-image | img_url: 'master' }}" alt="">       
      </div>
      {% endif %}
    </div>
  </div>
</section>


