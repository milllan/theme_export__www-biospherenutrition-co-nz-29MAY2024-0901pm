</style>

{% schema %}
  {
    "name": "blog article main banner",
    "settings": [
		{
			"type":"image_picker",
			"id":"main_image",
			"label":"Add article image"
		},
		{
			"type":"text",
			"id":"date",
			"label":"Add article date"
		},
		{
			"type":"text",
			"id":"article_title",
			"label":"Add Article Title"
		},
		{
			"type":"richtext",
			"id":"banner_content",
			"label":"Add Rrticle Content"
		}
	],
	"presets":[
		{
			"name":"blog article main banner"
		}
	]
  }
{% endschema %}

