<div class="review_section" style="background: url({{ section.settings.bg_image | img_url:'master' }}) no-repeat scroll center; background-size: cover;">
  <div class="inner_review_section">
    {% for block in section.blocks %}
      <div class="review_itm">
        <div class="inner_review_dv">
          {% if block.settings.review_body != blank %}<div class="inner_text_dv">{{ block.settings.review_body }}</div>{% endif %}
          {% if block.settings.name != blank %}<h3>{{ block.settings.name }}<img src="{{ 'quote.png' | asset_url }}" alt="quote" title="quote" /></h3>{% endif %}
        </div>
      </div>
      {% endfor %}
  </div>
</div>
{% schema %}
  {
    "name": "Review Section",
    "settings": [{
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    }],
    "blocks": [{
      "type": "review_block",
      "name": "Review Block",
      "settings": [{
          "type": "richtext",
          "id": "review_body",
          "label": "Review Body"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name"
        }]
    }],
    "presets": [{
      "name": "Review Section",
      "category": "Text"
    }]
  }
{% endschema %}