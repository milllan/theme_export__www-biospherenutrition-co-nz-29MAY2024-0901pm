<div
  class="wrp-quotes {% if section.settings.enadble_bg_c or section.settings.bg_img != blank %}home-outline with-gradient{% endif %}"
  data-section-id="{{ section.id }}"
  data-section-type="quotes"
  {%- if section.settings.enadble_bg_c %}
    style="background: {{ section.settings.bg_c }}"
  {%- else %}
    {%- assign block_image = section.settings.bg_img %} data-bg="{{ block_image | img_url: '300x300' }}"
    data-bgset="{% include 'bgset', image: block_image %}" data-sizes="auto" data-parent-fit="contain"
    style="background-position: {{ block.settings.alignment }}; background-image: url('{{ block_image | img_url: '300x300' }}');"
  {%- endif -%}
>
  <div class="page-width home-quotes-page-width">
    {% if section.settings.title != blank %}
      <div class="section-header text-center">
        <h2>{{ section.settings.title | escape }}</h2>
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="quotes-wrapper">
        <div class="quotes-slider" id="Quotes-{{ section.id }}" data-count="{{ section.blocks.size }}">
          {% for block in section.blocks %}
            <div class="quotes-slide--item quotes-slide--{{ block.id }}" {{ block.shopify_attributes }}>
              <blockquote class="quotes-slider__text text-center quotes-slider__text-n">
                {%- if block.settings.image != blank -%}
                  <div class="t_img">
                    <img data-src="{{ block.settings.image | img_url:'' }}" class="lazyload" width="auto" height="auto">
                  </div>
                {%- endif -%}
                <div class="blockquote_wrapper">
                  {%- if block.settings.title -%}
                    <span class="bq_title fw-bold">{{ block.settings.title }}</span>
                  {%- endif -%}
                  {%- if block.settings.date -%}
                    <span class="bq_date fw-light">{{ block.settings.date }}</span>
                  {%- endif -%}
                </div>
                <div class="blockquote_star">
                  <i class="fa fa-star" aria-hidden="true"></i>
                  <i class="fa fa-star" aria-hidden="true"></i>
                  <i class="fa fa-star" aria-hidden="true"></i>
                  <i class="fa fa-star" aria-hidden="true"></i>
                  <i class="fa fa-star" aria-hidden="true"></i>
                </div>
                {%- comment -%}<span class="quote-icon">{% include 'icon-quote' %}</span>{%- endcomment -%}
                {% if block.settings.quote != blank %}
                  <div class="rte-setting rte">{{ block.settings.quote }}</div>
                {% endif %}
                {% if block.settings.author != blank %}
                  <cite>{{ block.settings.author | escape }}</cite>
                {% endif %}
              </blockquote>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}

    {% if section.blocks.size == 0 %}
      {% include 'no-blocks' %}
    {% endif %}
  </div>
</div>

