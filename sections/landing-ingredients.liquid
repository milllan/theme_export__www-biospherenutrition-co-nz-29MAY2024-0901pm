<div class="landing-ingredients">
  <div class="mg-container">
	<div class="ingredient-container">
      
      	 
      <div class="ingredient-left">
        {% for block in section.blocks %}
            {% case block.type %}
            	{% when 'image' %}
                  {% if block.settings.image != blank %}
                    <figure>
                      {% if block.settings.image_link != blank %}<a href="{{ section.settings.image_link }}">{% endif %}
                      <img src="{{ block.settings.image | img_url:'master' }}" alt="{{ shop.name }}">   
                      {% if block.settings.image_link != blank %}</a>{% endif %}
                    </figure>
                  {% endif %}
      
            {% endcase %}
        {% endfor %}
      </div>
      <div class="ingredient-right">
        <ul>
          
          {% for block in section.blocks %}
              {% case block.type %}

                  {% when 'text' %}
          
          			<li>
                      {% if block.settings.icon_link != blank %}
                      <a class="full-width-link" href="{{ block.settings.icon_link }}" title="" target="_blank" rel="noopener" aria-describedby="a11y-new-window-message"></a>
                      {% endif %}
                      
                      {% if block.settings.icon_img != blank %}
                      <div class="ingredient-img-wrapper">
                          <img src="{{ block.settings.icon_img | img_url:'master' }}" alt="{{ shop.name }}">
                      </div>
                      {% endif %}
                      
                      {% if block.settings.title != blank %}
                        <div class="ingredient-title-wrapper">
                          <h4>{{ block.settings.title }}</h4>
                        </div>
                      {% endif %}
                    </li>

              {% endcase %}
          {% endfor %}
          
        </ul>
      </div>
    </div>
    
  </div>
  <div class="land-ingredient-black">
    <div class="mg-container">
      <div class="ingredients-black">
        
        {% if section.settings.title != blank %}
          <h4>{{ section.settings.title }}</h4>
        {% endif %}

        {% if section.settings.text != blank %}
          <p>{{ section.settings.text }}</p>
        {% endif %}	

        {% if section.settings.text_sec != blank %}
		  <p>{{ section.settings.text_sec }}</p>
        {% endif %}	
        
      </div>
    </div>
  </div>
  <div class="start-trial-div">
    {% if section.settings.btn_link != blank %}
    	<a href="{{ section.settings.btn_link }}" class="start-trial-btn">{{ section.settings.btn_text }}</a>
    {% endif %}
  </div>
</div>


{% schema %}
  {
    "name": "Landing Ingredients",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Talk about your brand"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Text",
		"info": "Use <br> tag for new line."
      },
      {
        "type": "textarea",
        "id": "text_sec",
        "label": "Text",
		"info": "Use <br> tag for new line."
      },
      {
        "type": "url",
        "id": "btn_link",
        "label": "Button Link"
      },
      {
        "type": "text",
        "id": "btn_text",
        "label": "Button text",
        "default": "Click Here"
      }
	],
	"blocks": [
      {
        "type": "text",
        "name": "Icon with text",
        "settings": [
		  {
            "type":"image_picker",
            "label":"Select Icon",
            "id":"icon_img"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Talk about your brand"
          },
          {
            "type": "url",
            "id": "icon_link",
            "label": "Icon Link"
          }
        ]
      },
	  {
        "type": "image",
        "name": "Left Image",
		"limit": 1,
        "settings": [
		  {
            "type":"image_picker",
            "label":"Select Image",
            "id":"image"
          },
          {
            "type": "url",
            "id": "image_link",
            "label": "Link for Image",
            "info": "Optional"
          }
        ]
      }
	]
  }
{% endschema %}



