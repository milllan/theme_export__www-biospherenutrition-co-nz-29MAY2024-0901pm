{% schema %}
{
  "name": "Landing ingredients list",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_img",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id":"title",
      "label": "Title"
    },
    {
      "type" : "checkbox",
      "id" : "enable_cls",
      "label" : "New Ingredient"
    },
    {
      "type": "html",
      "id": "title_svg",
      "label": "Title SVG"
    },
    {
      "type": "text",
      "id": "oth-ing",
      "label": "other ingrediant title"
    },
    {
      "type": "html",
      "id": "true-svg",
      "label": "True SVG"
    },
    {
      "type": "html",
      "id": "false-svg",
      "label": "False SVG"
    },{
      "type": "image_picker",
      "id": "mobile-true-svg",
      "label": "mobile-true-svg"
    },{
      "type": "image_picker",
      "id": "mobile-false-svg",
      "label": "mobile-false-svg"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    }
  ],
  "blocks":[
    {
      "type":"list",
      "name":"List",
      "settings":[
        {
          "type":"text",
          "id":"text",
          "label":"Text"
        }
      ]
    }
  ],
  "presets":[
    {
      "name": "Landing ingredients list"
    }
  ]
}
{% endschema %}
