<section class="section-landing-ingredients-list section-{{ section.id }}">
  <div class="page-width">
    <div class="landing-ingredients-list">
      {%- if section.settings.title != blank -%}
        <div class="ingredients-list-head">
          <h2>{{ section.settings.title }}</h2>
        </div>
      {%- endif -%}
      <div class="ln-wrap">
        <table>
          {%- if section.settings.title_svg != blank or section.settings['oth-ing'] != blank -%}
            <thead>
              {%- if section.settings.title_svg != blank -%}
                <th>
                  <span class="desktop-svg"> {{ section.settings.title_svg }} </span>
                  <span class="mobile-svg-wrapper">
                    {% if template == 'page.new_prebiotic_product' %}
                     {% render 'green-mobile-svg' %} 
                    {% elsif template == 'page.new-magnesium' %}
                       {% render 'blue-svg' %} 
                      {% else %}
                    {% render 'mobile-svg' %} 
                  {% endif %}</span>
                </th>
              {%- endif -%}
              <th></th>
              {%- if section.settings['oth-ing'] != blank -%}
                <th>{{ section.settings['oth-ing'] }}</th>
              {%- endif -%}
            </thead>
          {%- endif -%}
          <tbody>
            {%- for block in section.blocks -%}
              {%- if block.settings['true-svg'] != blank
                or block.settings.text != blank
                or section.settings['false-svg'] != blank
              -%}
                <tr>
                  {%- if section.settings['true-svg'] != blank -%}
                    <td>{{ section.settings['true-svg'] }}</td>
                  {%- endif -%}
                  {%- if block.settings.text != blank -%}
                    <td class="ingredients_list_text">{{ block.settings.text }}</td>
                  {%- endif -%}
                  {%- if section.settings['false-svg'] != blank -%}
                    <td>{{ section.settings['false-svg'] }}</td>
                  {%- endif -%}
                </tr>
              {%- endif -%}
            {%- endfor -%}
          </tbody>
        </table>
      </div>
      {% if page.title == 'Prebiotic Deal' %}
      <div class="new_prebiotic-table">
        <table>
          {%- if section.settings.title_svg != blank or section.settings['oth-ing'] != blank -%}
            <thead>
               <th></th>
              {%- if section.settings.title_svg != blank -%}
                <th>
                  <span class="desktop-svg"> {{ section.settings.title_svg }} </span>
                  <span class="mobile-svg-wrapper"> {% render 'mobile-svg' %} </span>
                </th>
              {%- endif -%}
              {%- if section.settings['oth-ing'] != blank -%}
                <th>{{ section.settings['oth-ing'] }}</th>
              {%- endif -%}
            </thead>
          {%- endif -%}
            <tbody>
                {%- for block in section.blocks -%}
                    {%- if block.settings['mobile-true-svg'] != blank
                    or block.settings.text != blank
                    or section.settings['mobile-false-svg'] != blank
                    -%}
                    <tr>
                       {%- if block.settings.text != blank -%}
                        <td class="ingredients_list_text">{{ block.settings.text }}</td>
                      {%- endif -%}
                      {%- if section.settings['mobile-true-svg'] != blank -%}
                        <td> <img src="{{ section.settings['mobile-true-svg'] | img_url : 'master' }}" width="{{ section.settings['mobile-true-svg'].width }}" height="{{ section.settings['mobile-true-svg'].height }}" alt="{{ section.settings['mobile-true-svg'].alt }}" loading="lazy">  </td>
                      {%- endif -%}
                      {%- if section.settings['mobile-false-svg'] != blank -%}
                        <td><img src="{{ section.settings['mobile-false-svg'] | img_url : 'master' }}" width="{{ section.settings['mobile-false-svg'].width }}" height="{{ section.settings['mobile-false-svg'].height }}" alt="{{ section.settings['mobile-false-svg'].alt }}" loading="lazy"> </td>
                      {%- endif -%}
                    </tr>
                    {%- endif -%}
                {%- endfor -%}
            </tbody>
          </table>
        </div>
      {% endif %}
      </div>
  </div>
</section>

