  {
    "@context": "https://schema.org",
    "@type": "Person",
    "name": "Dr Ronald Goedeke",
    "jobTitle": "Doctor",
    "gender": "Male",
    "nationality": "New Zealand",
    "worksFor": {
      "@type": "Organization",
      "name": "Appearance Medicine & Wellness Clinic",
      "url": "https://www.appearancemedicine.co.nz",
      "sameAs": [
        "https://www.facebook.com/AppearanceMedicine",
        "https://www.instagram.com/AppearanceMedicine",
        "https://www.linkedin.com/company/AppearanceMedicine"
      ],
