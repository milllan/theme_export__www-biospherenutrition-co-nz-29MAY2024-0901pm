  window.addEventListener('DOMContentLoaded', (event) => {
    $(document).on('click','.faq-block .faq-li .faq-que',function(){
      if($(this).parent('.faq-li').hasClass('active')){ 
        $(this).parent('.faq-li').removeClass('active');
        $(this).next().slideUp();
     }else{
      $(this).next().slideToggle();
      $(this).parent('.faq-li').toggleClass('active')
      $(this).parent('.faq-li').siblings().find('.faq-ans').slideUp();
      $(this).parent('.faq-li').siblings().removeClass('active')
      }
    });
  });
</script>