{% unless template.suffix contains 'new-static-nitric-oxide' %}
<style>
  .show-klaviyo-popup {overflow: hidden;}
  .klaviyo_popup {position: fixed;top: 50%;left: 50%;margin: auto;transform: translate(-50%, -50%);z-index: 1;}
  .klaviyo_popup span.icon_close {position: absolute;top: 10px;right: 10px;z-index: 2;}
  .klaviyo-popup-overlay {position: fixed;left: 0;top: 0;width: 100%;height: 100%;background-color: rgba(0, 0, 0, 0.5);opacity: 0;visibility: hidden;transform: scale(1.1);transition: visibility 0s linear 0.25s, opacity 0.25s 0s, transform 0.25s;}
  .show-klaviyo-popup .klaviyo-popup-overlay {opacity: 1;visibility: visible;transform: scale(1.0);transition: visibility 0s linear 0s, opacity 0.25s 0s, transform 0.25s;}
</style>

<div class="klaviyo_popup cust_klaviyo" style="display:none;">
  <span class="icon_close" style="display:none;">
    <svg
      role="img"
      width="35"
      height="35"
      viewBox="0 0 20 20"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
      class="needsclick  kl-private-reset-css-Xuajs1"
    >
      <title id="title-Close form 595" data-a11y-identifier="dismiss:dismiss:form">Close form 595</title><circle cx="10" cy="10" r="9.5" fill="rgba(255,255,255,1)" stroke="rgba(255,255,255,0)" data-a11y-identifier="dismiss:dismiss:form" style="cursor: pointer;"></circle><path d="M6 6L14 14M6 14L14 6L6 14Z" stroke="#373F47" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" data-a11y-identifier="dismiss:dismiss:form" style="cursor: pointer;"></path>
    </svg>
  </span>
  <div class="klaviyo-form-XAH9id"></div>
</div>
<div class="klaviyo-popup-overlay" style="display:none"></div>
{% endunless %}

